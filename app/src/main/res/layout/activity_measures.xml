<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Measures">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/fragGraph"
        class="com.android.hamama.application.views.Graph"></fragment>

    <fragment
        android:id="@+id/fragDisplaySettings"
        class="com.android.hamama.application.views.DisplaySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragGraph"
        android:layout_alignParentBottom="true"></fragment>
</RelativeLayout>